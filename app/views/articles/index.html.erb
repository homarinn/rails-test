<div id="main">
    <!--<img src="../app/assets/images/main-img.jpg">-->
    <%= image_tag 'main-img.jpg'%>
</div>


<div id="article_wrap">

    <div id="article_list">
      <% @articles.each do |article| %>
        <div>
            <h2><%= link_to article.title, article %></h2>
            <p><%= article.created_at.strftime('%Y/%m/%d') %></p>
            <% if user_signed_in? %>
              <p>
                <%= link_to "編集", edit_article_path(article) %>
                <%= link_to "削除", article, method: :delete, data: {confirm: "削除してよろしいですか？"} %>
              </p>
            <% end %>
        </div>
      <% end %>

    </div>
    <div id="sidebar">
      <h2>★PV数ランキング</h2>
        <ul>
          <% i = 0 %>
          <% @ranking_articles.each do |article| %>
            <li><%= link_to article.title, article %>
            <%= link_to article do %>
            <span>&nbsp;(<%= @scores[i] %>pv)</span>
            <% end %></li>
          <% i += 1 %>
          <% end %>
        </ul>
    </div>
    <div class="clear"></div>
</div>